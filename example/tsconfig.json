{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": false
  },
  "lib": ["es2015"],
  "include": ["src", "scripts", "test"]
}
